{
  "name": "react-class-binder",
  "version": "1.0.1",
  "description": "Automatically binds React method when using plain ES6 classes",
  "main": "./lib",
  "scripts": {
    "test": "mocha --recursive --compilers js:babel-register ./test/*",
    "clean": "rimraf lib",
    "build": "babel src --out-dir lib",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Klathmon/react-class-binder.git"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-1"
    ]
  },
  "author": "Gregory Benner <gregbenner1@gmail.com> (https://github.com/Klathmon)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Klathmon/react-class-binder/issues"
  },
  "homepage": "https://github.com/Klathmon/react-class-binder#readme",
  "devDependencies": {
    "babel-cli": "6.10.1",
    "babel-eslint": "6.0.4",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.5.0",
    "chai": "3.5.0",
    "mocha": "2.5.3",
    "mocha-jsdom": "1.1.0",
    "react": "15.1.0",
    "react-addons-test-utils": "15.1.0",
    "rimraf": "2.5.2",
    "standard": "7.1.2"
  }
}
